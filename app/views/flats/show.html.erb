<% maps_address = (@flat.address).gsub(/ /, '+') %>

<div class="map" style="height: 300px; background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= maps_address %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C10');">

</div>
<div class="container margin-top-negative">
<div class="row">
  <div class="col-8">
    <div class="flat-show-card">
      <h2><%= @flat.name %></h2>
      <p><%= @flat.address %></p>
    </div>
    <div class="flat-show-card">
      <h3>A bit more about this flat...</h3>
      <p><%= @flat.description %></p>
    </div>
  </div>
  <div class="col-4">
    <div class="flat-show-card">
      <h5>Book this place!</h5>

      <form action="">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">From:</span>
          <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mt-2">
          <span class="input-group-addon" id="basic-addon1">To:</span>
          <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
      </form>
    </div>
    <div class="flat-show-card">
      <h3>Details</h3>
      <div class="flex">
        <i class="material-icons mr-2">people</i>
        <span><%= @flat.number_of_guests %></span>
        <div class="flex ml-3">
          <i class="material-icons mr-2">attach_money</i>
          <%= @flat.price_per_night %>
        </div>
      </div>
    </div>
    <div class="flat-show-card"></div>
  </div>
</div>
</div>
