<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h2>Add a new Flat</h2>
        <div class="mt-3">
          <ul style="list-style: none">
          <%= form_for @flat, url: { action: "create" }, html: { class: "form-control" } do |f| %>
            <li>
              <%= f.label :name %>
              <%= f.text_field :name %>
            </li>
            <li>
            <%= f.label :address %>
            <%= f.text_field :address %>
            </li>
            <li>
            <%= f.label :description %>
            <%= f.text_area :description, rows: 2 %>
            </li>
            <li>
            <%= f.label :price_per_night %>
            <%= f.text_field :price_per_night %>
            </li>
            <li>
            <%= f.label :number_of_guests %>
            <%= f.text_field :number_of_guests %>
            </li>
            <%= f.submit "Create flat", class: 'btn btn-primary' %>
            <%= link_to "Cancel", flats_path, class: 'btn btn-danger' %>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


